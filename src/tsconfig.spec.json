{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@config/*": ["config/*"],
      "@components/*": ["app/components/*"],
      "@directives/*": ["app/directives/*"],
      "@guards/*": ["app/guards/*"],
      "@interceptors/*": ["app/interceptors/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@models/*": ["app/models/*"],
      "@modules/*": ["app/modules/*"],
      "@pipes/*": ["app/pipes/*"],
      "@resolvers/*": ["app/resolvers/*"],
      "@services/*": ["app/services/*"]
    }
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
