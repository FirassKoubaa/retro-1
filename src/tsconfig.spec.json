{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@config/*": ["config/*"],
      "@components/*": ["core/components/*"],
      "@guards/*": ["core/guards/*"],
      "@interceptors/*": ["core/interceptors/*"],
      "@interfaces/*": ["core/interfaces/*"],
      "@models/*": ["models/*"],
      "@pipes/*": ["core/pipes/*"],
      "@resolvers/*": ["core/resolvers/*"],
      "@services/*": ["core/services/*"]
    }
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
